	string Version
	ptr[] Campaign Campaigns
	ptr[] Item Test
}

enum CampaignType
{
	CAMPAIGN_TUTORIAL
	CAMPAIGN_MAIN
	CAMPAIGN_DLC
}

Campaign
{
